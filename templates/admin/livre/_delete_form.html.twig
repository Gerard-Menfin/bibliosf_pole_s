<form method="post" action="{{ path('app_admin_livre_delete', {'id': livre.id}) }}" 
        onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer ce livre ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
    <button class="btn btn-danger">
        <i class="bi-trash"></i>
    </button>
</form>
