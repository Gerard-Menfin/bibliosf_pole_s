{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ livre.resume }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td>{{ livre.couverture }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.auteur.prenom ~ " " ~ livre.auteur.nom }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_admin_livre_index') }}" class="btn btn-primary">
            <i class="bi-arrow-return-left"></i> Retour
        </a>

        <a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}" class="btn btn-secondary">
            <i class="bi-pencil"></i> Modifier
        </a>

        {{ include('admin/livre/_delete_form.html.twig') }}
    </div>
{% endblock %}
