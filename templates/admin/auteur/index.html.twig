{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block titreH1 %}{{ block("title") }}{% endblock %}

{% block body %}

    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Biographie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.nom }}</td>
                <td>{{ auteur.biographie }}</td>
                <td>
                    <a href="{{ path('app_admin_auteur_show', {'id': auteur.id}) }}"><i class="bi-eye"></i></a>
                    <a href="{{ path('app_admin_auteur_edit', {'id': auteur.id}) }}"><i class="bi-pencil"></i></a>
                    {{ include('admin/auteur/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_auteur_new') }}"class="btn btn-primary"><i class="bi-plus"></i> Nouveau</a>
{% endblock %}
