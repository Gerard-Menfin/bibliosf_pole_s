{% extends 'base.html.twig' %}

{% block title %}Abonné{% endblock %}

{% block titreH1 %} {{ block('title') }} {% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonne.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ abonne.pseudo }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ abonne.autorisations}}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>*****</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ abonne.identite }}</td>
            </tr>

            <tr>
                <th>Emprunts</th>
                <td>
                    <table class="table">
                        <thead class="table-dark">
                            <tr>
                                <th>Livre</th>
                                <th>Emprunté le</th>
                                <th>Rendu le</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for emprunt in abonne.emprunts %}
                                <tr>
                                    <td>{{ emprunt.livre.titre }}</td>
                                    <td>{{ emprunt.sortie|date() }}</td>
                                    <td>{{ emprunt.retour ? emprunt.retour|date("d/m/Y") : "à rendre" }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>

                    </table>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_admin_abonne_index') }}" class="btn btn-secondary">
            <i class="bi-arrow-return-left"></i> Retour à la liste
        </a>

        <a href="{{ path('app_admin_abonne_edit', {'id': abonne.id}) }}" class="btn btn-primary"><i class="bi-pencil"></i></a>
    </div>
{% endblock %}
